<%= form_with(model: task, local: true) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="row ml-2">
    <div class="col-2">
      <form>
        <div class="form-group">
          <%= f.label :content, 'task' %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :status, 'status' %>
          <%= f.text_field :status, class: 'form-control' %>
        </div>
          <%= f.submit 'task編集', class: 'btn btn-primary'%>
      </form>
    </div>
  </div>
<% end %>